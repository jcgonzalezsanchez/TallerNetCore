@page
@model TGL.WebApp.Pages.Students.IndexModel
@addTagHelper`*, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}



<h1>Students</h1>
<form method="post">
    <table class="responsive-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Nit</th>
                <th>Age</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Students)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.Nit</td>
                <td>@item.Age</td>

                <td>
                    @foreach (var computer in item.Computers)
                    {
                        <ul>@computer.Brand | @computer.Model | @computer.Cpu | @computer.Ram</ul>
                    }
                </td>

                <td>
                    <a class="btn"
                       asp-route-id="@item.Id"
                       asp-page="Edit">
                        Edit
                    </a>

                </td>

                <td>
                    <button type="submit" class="btn"
                            asp-page-handler="delete"
                            asp-route-id="@item.Id">
                        delete
                    </button>
                </td>
                <td>
                    <a class="waves-effect waves-light btn"
                       asp-route-studentid="@item.Id"
                       asp-page="../Computers/Add">
                        <i class="material-icons">computer</i>
                    </a>

                </td>

            </tr>

            }


        </tbody>
    </table>
</form>
    <a asp-page="Add" class="btn">New student</a>


